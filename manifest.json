{
  "name": "معرض زمزم المحسن",
  "short_name": "زمزم",
  "description": "معرض فاخر للصور والفيديوهات مع تقنيات متطورة وتخزين سحابي",
  "version": "2.0.0",
  "manifest_version": 3,
  "start_url": "/",
  "display": "standalone",
  "background_color": "#0F172A",
  "theme_color": "#8B5CF6",
  "orientation": "any",
  "scope": "/",
  "lang": "ar",
  "dir": "rtl",
  "icons": [
    {
      "src": "./assets/favicon.ico",
      "sizes": "16x16 32x32",
      "type": "image/x-icon"
    },
    {
      "src": "./assets/apple-touch-icon.png",
      "sizes": "180x180",
      "type": "image/png"
    },
    {
      "src": "./assets/icon-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "./assets/icon-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],
  "screenshots": [
    {
      "src": "./assets/screenshot-wide.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide"
    },
    {
      "src": "./assets/screenshot-narrow.png",
      "sizes": "720x1280",
      "type": "image/png",
      "form_factor": "narrow"
    }
  ],
  "categories": ["photo", "multimedia", "entertainment"],
  "features": [
    "cloud-storage",
    "ai-enhancement",
    "3d-gallery",
    "advanced-search",
    "social-sharing"
  ],
  "permissions": [
    "storage",
    "camera",
    "microphone"
  ],
  "shortcuts": [
    {
      "name": "رفع صور جديدة",
      "short_name": "رفع",
      "description": "رفع صور وفيديوهات جديدة للمعرض",
      "url": "/?action=upload",
      "icons": [
        {
          "src": "./assets/upload-icon.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "المعرض ثلاثي الأبعاد",
      "short_name": "3D",
      "description": "عرض المعرض بتقنية ثلاثية الأبعاد",
      "url": "/?view=3d",
      "icons": [
        {
          "src": "./assets/3d-icon.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "المزامنة السحابية",
      "short_name": "سحابة",
      "description": "مزامنة الملفات مع التخزين السحابي",
      "url": "/?action=sync",
      "icons": [
        {
          "src": "./assets/cloud-icon.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "related_applications": [
    {
      "platform": "webapp",
      "url": "https://zamzam-gallery-enhanced.com/manifest.json"
    }
  ],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "handle_links": "preferred",
  "capture_links": "existing-client-navigate"
}

